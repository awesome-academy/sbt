<% provide :title, t("category_manage") %>
  <h1 class = "text-center" ><%= t("category_manage") %></h1>
  <div class="col-md-12">
    <%= link_to t("add"), new_category_path, class: "f30-bold"%>
    <table class = "table table-responsive-sm table-hover table-outline mb-0">
      <thead class="thead-light">
        <tr>
          <th class = "text-center"></th>
          <th class = "text-center"><%= t"category" %></th>
          <th class = "text-center"><%= t"post_amount" %></th>
          <th class = "text-center"><%= t"status" %></th>
          <th class = "text-center"></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "category_row", collection: @category_rows %>
      </tbody>
    </table>
    <%= will_paginate @category_rows %>
  </div>
